  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ember Server",
      "program": "${workspaceFolder}/node_modules/ember-cli/bin/ember",
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}",
      "args": ["s"],
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ember Exam",
      "program": "${workspaceFolder}/node_modules/ember-cli/bin/ember",
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}",
      "args": ["exam"],
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Launch via Yarn",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "yarn",
      "windows": {
        "runtimeExecutable": "yarn.cmd"
      },
      "runtimeArgs": ["test"],
      "port": 5858
    },
    {
      "type": "node",
      "request": "launch",
      "name": "yarn",
      "runtimeExecutable": "yarn",
      "windows": {
        "runtimeExecutable": "yarn.cmd"
      },
      "runtimeArgs": [
        "test"
      ],
      "port": 5858,
      "cwd": "${workspaceRoot}",
      "timeout": 10000
    }
  ]
}
